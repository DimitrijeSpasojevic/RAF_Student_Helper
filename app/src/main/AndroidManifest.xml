<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.raf.rafstudenthelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="rs.raf.rafstudenthelper.application.RAFStudentHelperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vezbe11" >
        <activity android:name=".presentation.view.activities.NewNoteActivity"/>
        <activity android:name=".presentation.view.activities.EditNoteActivity"/>
        <activity android:name=".presentation.view.activities.MainActivity"/>
        <activity android:name=".presentation.view.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.StartingSpash.Vezbe11">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>